<section>
  <div class="search" {{bind-attr class="isZipcode::invalid"}}>
    <h1>Who represents me?</h1>
    {{input action="actionSearch" placeholder="Enter your zipcode" value=addressValue}}
    {{#unless isZipcode}}
      <h5>Are you sure you typed that right?  Thats not a zipcode.</h5>
    {{/unless}}
  </div>
</section>
{{#if isLoading}}
  <section class="main-content">
    <div class="row"><h2>loading...</h2></div>
  </section>
{{else}}
  {{#if legislators}}
    <section class="main-content">
      <div class="row">
        <h1>Who else do they represent?</h1>
        <div class="colum">
          <ul class="legislator-list">
            {{#each legislator in legislators}}
              {{legislator-list-item action="actionClearSelection" legislator=legislator}}
            {{/each}}
          </ul
          ><div class="legislator-detail">
            <h2>{{selectedRep.fullName}}</h2>
            <p><h4>{{selectedRep.fullTitle}} ({{selectedRep.party}})</h4></p>
            <div class="colum">
              <h5>Top Contributors</h5>
              <ul>
                {{#each selectedRep.contributors}}
                  <li>
                    <strong>{{name}}</strong><em>{{format-dollars total_amount}}</em>
                  </li>
                {{/each}}
              </ul>
            </div
            ><div class="colum">
              <h5>Top Contributing Industries</h5>
              <ul>
                {{#each selectedRep.industries}}
                  <li>
                    <strong>{{displayName}}</strong><em>{{format-dollars amount}}</em>
                  </li>
                {{/each}}
              </ul>
            </div>
          </div>
          <small class="numbers">Data from 2012.</small>
        </div>
      </div>
    </section>
  {{else}}

    <section class="main-content intro">
      <div class="row">
        <h1>We believe the government should represent its citizens.</h1>

        <div class="about">
          <h2>Did you know...</h2>
          <p>House majority leader, John Boehner's (R), second highest campaign contributor right now is Comcast Corp? ($50,200) </p>
        </div>
        <div class="about">
          <h5>Top Contributing Industries</h5>
          <ul>
            {{#each selectedRep.industries}}
              <li>
                <strong>{{displayName}}</strong><em>{{format-dollars amount}}</em>
              </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </section>

  {{/if}}
{{/if}}
