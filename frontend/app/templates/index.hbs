<section>
    <div class="search">
        <h1>Who represents me?</h1>
        {{input action="actionSearch" placeholder="Enter your zipcode" value=addressValue}}
    </div>
</section>

{{#if legislators}}
    <section class="main-content">
        <div class="row">
            <div class="colum">
                <ul class="legislator-list">
                    {{#each legislator in legislators}}
                        {{legislator-list-item action="actionClearSelection" legislator=legislator}}
                    {{/each}}
                </ul
                ><div class="legislator-detail">
                    <h2>{{selectedRep.fullName}}</h2>
                    <p>
                        <strong>{{selectedRep.fullTitle}} ({{selectedRep.party}})</strong>
                    </p>
                    <div class="colum">
                        <h4>Top Contributors</h4>
                        <ul>
                            {{#each selectedRep.contributors}}
                                <li>
                                    <strong>{{name}}</strong><em>{{format-dollars total_amount}}</em>
                                </li>
                            {{/each}}
                        </ul>
                    </div
                    ><div class="colum">
                        <h4>Top Contributing Industries</h4>
                        <ul>
                            {{#each selectedRep.industries}}
                                <li>
                                    <strong>{{displayName}}</strong><em>{{format-dollars amount}}</em>
                                </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
{{/if}}